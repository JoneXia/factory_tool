<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially">

    <set android:ordering="together">
        <set android:ordering="sequentially">
            <objectAnimator
                android:propertyName="scaleX"
                android:valueType="floatType"
                android:valueFrom="0"
                android:valueTo="2.5"
                android:duration="400"
                />
            <objectAnimator
                android:propertyName="scaleX"
                android:valueType="floatType"
                android:valueFrom="2.5"
                android:valueTo="2"
                android:duration="200"
                />
            <objectAnimator
                android:propertyName="scaleX"
                android:valueType="floatType"
                android:valueTo="2.5"
                android:valueFrom="2"
                android:duration="200"
                />
        </set>

        <set android:ordering="sequentially">
            <objectAnimator
                android:propertyName="scaleY"
                android:valueType="floatType"
                android:valueFrom="0"
                android:valueTo="2.5"
                android:duration="400"
                />
            <objectAnimator
                android:propertyName="scaleY"
                android:valueType="floatType"
                android:valueFrom="2.5"
                android:valueTo="2"
                android:duration="200"
                />
            <objectAnimator
                android:propertyName="scaleY"
                android:valueType="floatType"
                android:valueTo="2.5"
                android:valueFrom="2"
                android:duration="200"
                />
        </set>

        <objectAnimator
            android:propertyName="alpha"
            android:valueTo="1"
            android:valueFrom="0.4f"
            android:interpolator="@android:interpolator/accelerate_decelerate"
            android:valueType="floatType"
            android:duration="300"/>
    </set>

    <objectAnimator
        android:valueType="floatType"
        android:duration="300"
        android:propertyName="alpha"
        android:valueFrom="1f"
        android:valueTo="1f"/>

    <set android:ordering="together">

        <objectAnimator
            android:propertyName="scaleX"
            android:valueFrom="2.5"
            android:valueTo="0f"
            android:valueType="floatType"
            android:duration="400"/>

        <objectAnimator
            android:propertyName="scaleY"
            android:valueFrom="2.5"
            android:valueTo="0f"
            android:valueType="floatType"
            android:duration="400"/>

        <objectAnimator
            android:propertyName="alpha"
            android:valueTo="0"
            android:valueFrom="1f"
            android:valueType="floatType"
            android:duration="400"/>
    </set>


</set>