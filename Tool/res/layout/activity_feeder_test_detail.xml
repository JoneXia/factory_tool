<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/test_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Text_Middle_Black"
        android:padding="5dip" />

    <ScrollView
        android:id="@+id/test_scrllview"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/test_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Text_Middle_Black"
                android:singleLine="false"
                android:padding="5dip" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dip">

        <Button
            android:id="@+id/test_btn_1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Text_Small_White"
            android:background="@drawable/selector_gray"
            />

        <Button
            android:id="@+id/test_btn_2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dip"
            style="@style/Text_Small_White"
            />

        <Button
            android:id="@+id/test_btn_3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dip"
            style="@style/Text_Small_White"
            />
    </LinearLayout>
</LinearLayout>